<div class="container">
    <form class="formLogin" method="post" action='@Url.Action("VerificarUsuarioRegistro","Home")' enctype="multipart/form-data">
        <h1 class="text-white">Registrarse</h1>
        <input class="mb-3" type="text" name="Nombre" placeholder="Ingrese nombre usuario" required>
        <br>
        <input class="mb-3" type="password" name="Contrase単a" placeholder="Ingrese contrase単a" required>
        <br>
        <input class="mb-3" type="password" name="Contrase単a2" placeholder="Confirme su contrase単a" required>
        <br>
        <button class="mb-3 btn btn-primary" type="submit">
            Ingresar
        </button>
    </form>
    @if(ViewBag.Mensaje!=null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Mensaje
        </div>
    }
</div>
